@objects
    heading-1               h1.d2l-heading-1
    heading-2               h2.d2l-heading-2
    heading-3               h3.d2l-heading-3
    heading-4               h4.d2l-heading-4
    heading-5               h5.d2l-heading-5
    standard                .d2l-body-standard
    compact                 .d2l-body-compact
    small                   .d2l-body-small

= Typography classes =
    @on desktop
        heading-1:
            css font-size is "40px"
            css font-weight is "normal"
            css line-height is "48px"
            css letter-spacing matches "0\.20+.*px"
        heading-2:
            css font-size is "30px"
            css font-weight is "normal"
            css line-height is "36px"
            css letter-spacing matches "0\.20+.*px"
        heading-3:
            css font-size is "20px"
            css font-weight is "bold"
            css line-height is "30px"
            css letter-spacing matches "0\.20+.*px"
        heading-4:
            css font-size is "16px"
            css font-weight is "bold"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        standard:
            css font-size is "19px"
            css font-weight is "normal"
            css line-height is "28px"
            css letter-spacing matches "0\.20+.*px"
        compact:
            css font-size is "16px"
            css font-weight is "normal"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        small:
            css font-size is "14px"
            css font-weight is "normal"
            css line-height is "21px"
            css letter-spacing matches "0\.20+.*px"
    @on mobile
        heading-1:
            css font-size is "30px"
            css font-weight is "normal"
            css line-height is "36px"
            css letter-spacing matches "0\.20+.*px"
        heading-2:
            css font-size is "20px"
            css font-weight is "bold"
            css line-height is "30px"
            css letter-spacing matches "0\.20+.*px"
        heading-3:
            css font-size is "16px"
            css font-weight is "bold"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        heading-4:
            css font-size is "16px"
            css font-weight is "bold"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        standard:
            css font-size is "16px"
            css font-weight is "normal"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        compact:
            css font-size is "16px"
            css font-weight is "normal"
            css line-height is "24px"
            css letter-spacing matches "0\.20+.*px"
        small:
            css font-size is "12px"
            css font-weight is "normal"
            css line-height is "18px"
            css letter-spacing matches "0\.20+.*px"
